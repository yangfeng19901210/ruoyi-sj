<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.BusDangyuanMapper">
    
    <resultMap type="BusDangyuan" id="BusDangyuanResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="phone"    column="phone"    />
        <result property="address"    column="address"    />
    </resultMap>

    <sql id="selectBusDangyuanVo">
        select id, name, phone, address from bus_dangyuan
    </sql>

    <select id="selectBusDangyuanList" parameterType="BusDangyuan" resultMap="BusDangyuanResult">
        <include refid="selectBusDangyuanVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="phone != null  and phone != ''"> and phone = #{phone}</if>
            <if test="address != null  and address != ''"> and address = #{address}</if>
        </where>
    </select>
    
    <select id="selectBusDangyuanById" parameterType="Long" resultMap="BusDangyuanResult">
        <include refid="selectBusDangyuanVo"/>
        where id = #{id}
    </select>

    <insert id="insertBusDangyuan" parameterType="BusDangyuan" useGeneratedKeys="true" keyProperty="id">
        insert into bus_dangyuan
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">name,</if>
            <if test="phone != null">phone,</if>
            <if test="address != null">address,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null">#{name},</if>
            <if test="phone != null">#{phone},</if>
            <if test="address != null">#{address},</if>
         </trim>
    </insert>

    <update id="updateBusDangyuan" parameterType="BusDangyuan">
        update bus_dangyuan
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null">name = #{name},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="address != null">address = #{address},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBusDangyuanById" parameterType="Long">
        delete from bus_dangyuan where id = #{id}
    </delete>

    <delete id="deleteBusDangyuanByIds" parameterType="String">
        delete from bus_dangyuan where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>